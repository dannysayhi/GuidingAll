<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="350px"
            android:layout_height="350px"
            android:id="@+id/iv_itemPhoto"
            android:src="@drawable/samuel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_lostDate"
            android:src="@drawable/lost_date"
            android:layout_marginTop="21dp"
            android:text="尋獲日期: "
            android:textSize="20dp"
            android:layout_below="@+id/iv_itemPhoto"
            android:layout_alignLeft="@+id/iv_itemPhoto"
            android:layout_alignStart="@+id/iv_itemPhoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_itemName"
            android:text="羅志偉"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/iv_itemPhoto"
            android:layout_toEndOf="@+id/iv_itemPhoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/et_itemLostDate"
            android:text="2015 / 7 / 1"
            android:textSize="20dp"
            android:layout_alignTop="@+id/iv_lostDate"
            android:layout_toEndOf="@+id/iv_lostDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_lostLocation"
            android:text="尋獲地點: "
            android:textSize="20dp"
            android:layout_below="@+id/iv_lostDate"
            android:layout_alignStart="@+id/iv_lostDate"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/et_itemLocation"
            android:text="台中市西屯區文華路100號"
            android:textSize="20dp"
            android:layout_alignTop="@+id/iv_lostLocation"
            android:layout_toEndOf="@+id/iv_lostLocation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_contact"
            android:text="聯絡方式: "
            android:textSize="20dp"
            android:layout_below="@+id/iv_lostLocation"
            android:layout_alignLeft="@+id/iv_lostLocation"
            android:layout_alignStart="@+id/iv_lostLocation"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_itemPhoneText"
            android:text="0922123456"
            android:textSize="20dp"
            android:layout_above="@+id/iv_itemInfo"
            android:layout_alignStart="@+id/et_itemLocation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_text"
            android:text="疾病: "
            android:textSize="20dp"
            android:layout_below="@+id/iv_contact"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/iv_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/tv"
            android:text="地中海型貧血"
            android:textSize="20dp"
            android:layout_alignTop="@+id/iv_text"
            android:layout_toEndOf="@+id/iv_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_itemInfo"
            android:text="說明"
            android:textSize="20dp"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/iv_contact"
            android:layout_alignStart="@+id/iv_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_itemInfo"
            android:layout_below="@+id/iv_itemInfo"
            android:layout_alignLeft="@+id/iv_itemInfo"
            android:layout_alignStart="@+id/iv_itemInfo"
            android:text="\t\t\t您好，若您發現此人昏倒在地，可能是貧血症狀所造成，希望您能幫助他，從他身上拿取藥物讓他服藥後，並協助送醫，謝謝！"
            android:textSize="20dp"
            android:layout_alignRight="@+id/et_itemPhoneText"
            android:layout_alignEnd="@+id/et_itemPhoneText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/et_itemInfo"
            android:layout_alignLeft="@+id/et_itemInfo"
            android:layout_alignStart="@+id/et_itemInfo"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp">

        </LinearLayout>


    </RelativeLayout>

</ScrollView>